<ul>
  <li>
    Name: <%= @student.name %>
  </li>
  <li>
    Birthday: <%= @student.birthday.strftime("%m/%d/%Y")  %>
  </li>
  <li>
    Hometown: <%= @student.hometown.capitalize %>
  </li>
</ul>

<%= form_for @student do |f|%>
  <h1>Search form:</h1>

  <%= f.label "Search" %>
  <%= f.text_field :search %>

  <p>
    <%= f.submit "Search" %>
  </p>
<% end %>
